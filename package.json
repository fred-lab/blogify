{
  "name": "blogify",
  "description": "A simple app to write articles and post them on different blogs",
  "author": "Fred Gauthier",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "scripts": {
    "server:start": "node ./src/bin/server.ts",
    "server:dev": "DEBUG=blogify:* nodemon ./src/bin/server.ts",
    "server:build": "tsc --project .",
    "prod": "npm run server:build && cross-env NODE_ENV=production webpack --mode=production",
    "dev": "cross-env NODE_ENV=development webpack --mode=development",
    "watch": "npm run dev && cross-env NODE_ENV=development webpack-dev-server --mode=development  --hot --progress --colors --inline",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migration:create": "npm run typeorm -- migration:create -n",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:show": "npm run typeorm -- migration:show",
    "migration:revert": "npm run typeorm -- migration:revert",
    "entity:create": "npm run typeorm -- entity:create",
    "subscriber:create": "npm run typeorm -- subscriber:create"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-redis": "^5.0.0",
    "cookie-parser": "~1.4.5",
    "debug": "~4.2.0",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "express-session": "^1.17.1",
    "morgan": "~1.10.0",
    "pg": "^8.4.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.28",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "0.0.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.6",
    "@types/redis": "^2.8.28",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.2.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "postcss-loader": "^4.0.4",
    "sass-loader": "^10.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0"
  }
}
